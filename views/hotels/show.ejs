<% include ../partials/header%>
    <div class = "container">
        <div class = "row">
            <div class = "col-md-3">
                <p class = "lead">Yelp Hotel</p>
                <div class = "list-group">
                    <li class = "list-group-item active">Info 1</li>
                    <li class = "list-group-item">Info 2</li>
                    <li class = "list-group-item">Info 3</li>
                </div>
            </div>
            <div class = "col-md-9">
                <div class = "thumbnail">
                    <img class = "img-responsive"src = "<%= hotel.image %>">
                    <div  class = "caption-full">
                        <h4 class = "pull-right">$165.00/night</h4>
                            <h1><a><%=hotel.name %></a></h1>
                            <h2><%=hotel.location%></h2>
                            <p><%= hotel.description %></p>
                    </div>
                </div>
                <div class = "well">
                    <div class = "text-right">
                         <a class = "btn btn-success"href = "/hotels/<%=hotel._id%>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% hotel.comments.forEach(function(comment){ %>
                        <div class = "row">
                            <div class = "col-md-12">
                                <strong><%= comment.author%></strong>
                                <span class = "pull-right">10 days ago</span>
                                <p> 
                                    <%= comment.text %>
                                </p>    
                            </div>
                        </div>
                    <% }) %>
                    
                </div>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>